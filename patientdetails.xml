<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgrpund"
        tools:context=".MainActivity" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userdetails"
        android:text="User Details"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userdetails"
        android:text="Name :"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/nametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/useraddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nametext"
        android:text="Address :"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginStart="20dp"
       />

    <EditText
        android:id="@+id/addresstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/useraddress"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/userage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addresstext"
        android:text="Age :"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/agetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userage"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/usergender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agetext"
        android:text="Gender :"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/gendertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usergender"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/usernic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gendertext"
        android:text="NIC :"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/nictext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernic"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/usercontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nictext"
        android:text="Gender :"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/contacttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usercontact"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contacttext"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="next"
        android:textSize="25dp" />


</RelativeLayout>